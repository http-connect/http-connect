{
    "name": "http-connect/http-connect",
    "description": "PHP library useful for easy creation of HTTP API clients.",
    "version": "1.0.0",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/http-connect",
    "authors": [
        {
            "name": "Stevan Pavlovic",
            "email": "pavlovicmstevan@gmail.com",
            "homepage": "https://stevanpavlovic.github.io",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.2",
        "ext-curl": "*",
        "ext-json": "*",
        "composer/semver": "^1.5",
        "ocramius/package-versions": "^1.5",
        "psr/container": "^1.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/log": "^1.1",
        "rize/uri-template": "^0.3.2",
        "symfony/validator": "^5.0",
        "teapot/status-code": "^1.1"
    },
    "require-dev": {
        "monolog/monolog": "^2.0",
        "nyholm/psr7": "^1.2",
        "php-http/discovery": "^1.7",
        "php-http/logger-plugin": "^1.1",
        "phpunit/phpunit": "^9.0",
        "ricardofiorani/guzzle-psr18-adapter": "^1.0",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/http-client": "^5.0",
        "symfony/var-dumper": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "HttpConnect\\HttpConnect\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HttpConnect\\HttpConnect\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs"
    }
}
